<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="BASE_PACKAGE">com.mariosmant</Property>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} [tid:%tid, tn:%t] %-5p %c{1}.%M:%L %X{username} - %m%n</Property>
        <Property name="ROOT_LOG_LEVEL">info</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}" />
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="${BASE_PACKAGE}.webapp.mediahub.core" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Root level="${ROOT_LOG_LEVEL}">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>